<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
  "
        >
    <id>linux-release</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>/data</outputDirectory>
            <directory>data</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <directory>extensions</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/conf</outputDirectory>
            <directory>conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/scripts</outputDirectory>
            <directory>scripts</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-devices/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-events/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-record/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-video/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-rest/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-scheduler/target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>../iris-speak/target</directory>
        </fileSet>
    </fileSets>
    <!-- use this section if you want to package dependencies -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <scope>runtime</scope>
            <excludes>
                <exclude>ru.iris:iris-devices</exclude>
                <exclude>ru.iris:iris-events</exclude>
                <exclude>ru.iris:iris-record</exclude>
                <exclude>ru.iris:iris-rest</exclude>
                <exclude>ru.iris:iris-scheduler</exclude>
                <exclude>ru.iris:iris-video</exclude>
                <exclude>ru.iris:iris-speak</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>