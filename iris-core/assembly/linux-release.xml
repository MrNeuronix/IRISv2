<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
">
    <id>linux-release</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>/data</outputDirectory>
            <directory>data</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/logs</outputDirectory>
            <directory>logs</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions</outputDirectory>
            <directory>extensions</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/conf</outputDirectory>
            <directory>conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/scripts</outputDirectory>
            <directory>scripts</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/lib</outputDirectory>
            <directory>lib</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <directory>target</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-devices/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-devices/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-events/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-events/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-video/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-video/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-rest/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-rest/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-scheduler/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-scheduler/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-speak/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-speak/target/plugin-classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/extensions/iris-ai/classes</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>../iris-ai/target/plugin-classes</directory>
        </fileSet>
    </fileSets>
    <!-- use this section if you want to package dependencies -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <scope>runtime</scope>
            <excludes>
                <exclude>ru.iris:iris-devices</exclude>
                <exclude>ru.iris:iris-events</exclude>
                <exclude>ru.iris:iris-video</exclude>
                <exclude>ru.iris:iris-speak</exclude>
                <exclude>ru.iris:iris-ai</exclude>
                <exclude>ru.iris:iris-rest</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>