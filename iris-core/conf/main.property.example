language=ru
locale=ru-RU
systemName=cистема

keystore-path=conf/keystore.db
keystore-password=changeme

#################################
# Audio section
#################################

# Total of connected microphones
microphones=1

# Microphone name in system (unlimited)
microphoneDevice2=hw2,0
microphoneDevice3=hw3,0

#################################
# REST section
#################################

httpPort=8085
httpHost=localhost
httpUser=admin
httpPassword=changeme

#################################
# Voice synth section
#################################

# Silence mode
silence=0

# Voice engine (google, voicerss)
ttsEngine=google

# VoiceRSS API (can be obtain for free)
voicerssAPI=

#################################
# Zwave section
#################################

# Controller port
zwavePort=/dev/ttyUSB0

# Set "true" if you need zwave debug on screen
zwaveDebug=false

# Path for open-zwave "conf" directory
openzwaveCfgPath=./conf/zwave-conf

